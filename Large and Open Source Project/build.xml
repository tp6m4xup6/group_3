<?xml version="1.0" encoding="UTF-8"?>
<project name="LnOS" basedir="." default="main">
	<!--Set parameter -->
	<property name="src.dir" value="src" />
	<property name="bulid.dir" value="build" />
	<property name="classes.dir" value="build/classes" />
	<property name="jar.dir" value="build/jar" />
	<property name="main-class" value="LnOS" />

	<!--Clean previous build dir -->
	<target name="clean">
		<delete dir="build" />
	</target>

	<!--Compile -->
	<target name="compile">
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}"
			includeAntRuntime="ture"/>
	</target>

	<!--Generate jar file -->
	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}" />
			</manifest>
		</jar>
	</target>

	<!--Run -->
	<target name="run" depends="jar">
		<java jar="${jar.dir}/${ant.project.name}.jar" fork="true" />
	</target>
	
	<target name="clean-bulid" depends="clean,jar"/>
			
	<target name="main" depends="clean,run"/>
	
	<!--JUnit testing-->
	<target name="run-tests" depends="compile">
		<junit printsummary="yes" haltonfailure="no" showoutput="no">
			<classpath>
				<path id="org.junit" location="C:/apache-ant-1.9.2/lib/junit.jar"/> 
			</classpath>
			
			<batchtest fork="yes" todir="${reports}/raw/">
				<formatter type="xml"/>
				<fileset dir="${src}">
					<include name="**/*Test.java"/>
				</fileset>
			</batchtest>
		</junit>
	</target>
	
	<!--Test report-->
	<target name="test" depends="run-tests">
		<junitreport todir="${reports}">
			<fileset dir="${reports}/raw/">
				<include name="Test-*.xml"/>
			</fileset>
			<!--strange@@-->
			<report format="frames" todir="${reports}\html"/>
		</junitreport>
	</target>


</project>